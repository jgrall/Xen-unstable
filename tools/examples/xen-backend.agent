#! /bin/sh

PATH=/etc/xen/scripts:$PATH

case "$XENBUS_TYPE" in
  vbd)
    /etc/xen/scripts/block "$ACTION"
    ;;
  vtpm)
    /etc/xen/scripts/vtpm "$ACTION"
    ;;
  vif)
    [ -n "$script" ] && $script "$ACTION"
    ;;
esac

case "$ACTION" in
  add)
    ;;
  remove)
    /etc/xen/scripts/xen-hotplug-cleanup.sh
    ;;
  online)
    ;;
  offline)
    ;;
esac
