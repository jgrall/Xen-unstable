#! /bin/sh

#DEVPATH=/devices/xen-backend/vif-1-0
#ACTION=add

PATH=/etc/xen/scripts:$PATH

DEV=$(basename "$DEVPATH")
case "$ACTION" in
  add)
    case "$DEV" in
      vif-*)
        vif=$(echo "$DEV" | sed 's/-\([0-9]*\)-\([0-9]*\)/\1.\2/')
        vif-bridge up domain=unknown vif="$vif" mac=fe:ff:ff:ff:ff:ff bridge=xen-br0 >/dev/null 2>&1
        ;;
    esac
    ;;
  remove)
    ;;
esac

