+static void ide_dma_finish(BMDMAState *bm)
+{
+    IDEState *s = bm->ide_if;
+
+    bm->status &= ~BM_STATUS_DMAING;
+    bm->status |= BM_STATUS_INT;
+    bm->dma_cb = NULL;
+    bm->ide_if = NULL;
+#ifdef DMA_MULTI_THREAD
+    ide_set_irq(s);
+#endif /* DMA_MULTI_THREAD */
+}
